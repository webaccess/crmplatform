{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "villages",
  "info": {
    "name": "village"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "abbreviation": {
      "type": "string",
      "unique": true
    },
    "identifier": {
      "type": "string",
      "unique": true
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "state": {
      "model": "state",
      "plugin": "crm-plugin"
    },
    "district": {
      "model": "district",
      "plugin": "crm-plugin"
    },
    "contacts": {
      "via": "villages",
      "plugin": "crm-plugin",
      "collection": "contact"
    }
  }
}
