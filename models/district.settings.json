{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "districts",
  "info": {
    "name": "district"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "is_active": {
      "required": true,
      "type": "boolean",
      "default": true
    },
    "abbreviation": {
      "type": "string",
      "unique": true
    },
    "identifier": {
      "type": "string",
      "unique": true
    },
    "state": {
      "model": "state",
      "plugin": "crm-plugin"
    },
    "villages": {
      "plugin": "crm-plugin",
      "collection": "village",
      "via": "district"
    }
  }
}
